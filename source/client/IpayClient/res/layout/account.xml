				</TableRow>
				
			</TableLayout> -->
			
		<ImageView
			android:layout_width="fill_parent"
			android:layout_marginTop="5dp"
			android:layout_height="wrap_content"
			android:src="@drawable/bg_thick_divider_3d"
		/>
			
			<Button 
				android:id="@+id/account_balance"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:layout_marginTop="10dp"
				style="@style/blue_button_long2"
				android:text="@string/account_see_money"/>
			<Button 
				android:id="@+id/account_modify"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:layout_marginTop="15dp"
				style="@style/blue_button_long2"
				android:text="@string/account_modify_account"/>
			<Button 
				android:id="@+id/account_history"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:layout_marginTop="15dp"
				android:text="@string/account_see_history"
				style="@style/blue_button_long2"
				/>

		</LinearLayout>	
	</ScrollView>
</LinearLayout>
