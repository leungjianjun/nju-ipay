<?xml version="1.0" encoding="utf-8"?>

<!-- 个人账户页面 -->
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
  
	<include layout="@layout/navi_bar"/>
	
	<ScrollView 
		android:background="#FFEFF0F4"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:padding="15dp"
		>
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="基本信息"/>
			
		<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_panel">
		
			<TableRow>
				<TextView 
					android:padding="5dp"
					android:text="姓名:"/>
				
				<TextView 
					android:padding="5dp"
					android:text="张三"/>
			</TableRow>
			
			<View 
				android:background="#ffcccccc"
				android:layout_height="1dp"
				android:layout_marginTop="3dp"
				android:layout_marginBottom="3dp"
			/>
			
			<TableRow>
				<TextView 
					android:padding="5dp"
					android:text="卡号:"/>
				
				<TextView 
					android:padding="5dp"
					android:text="123456789"/>
			</TableRow>
			
		</TableLayout>
		
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="账户金额"/>
			
		<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_panel">
		
			<TableRow>
				<TextView 
					android:padding="5dp"
					android:text="总计消费:"/>
				
				<TextView 
					android:padding="5dp"
					android:text="12345678"/>
			</TableRow>
			
			<View 
				android:background="#ffcccccc"
				android:layout_height="1dp"
				android:layout_marginTop="3dp"
				android:layout_marginBottom="3dp"/>
			
			<TableRow>
				<TextView 
					android:padding="5dp"
					android:text="剩余金额:"/>
				
				<TextView 
					android:padding="5dp"
					android:text="123456789"/>
			</TableRow>
			
		</TableLayout>
		
		
		
		
		</LinearLayout>	
	</ScrollView>
</LinearLayout>
