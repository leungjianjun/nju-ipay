<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg_login" > 
  
  <!-- ##这部分没有加入logo，有个界面BUG：选中输入框后，软键盘会把部分界面遮挡住。待解决## -->
  
  <!-- Logo部分 -->
	<RelativeLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      
		<TextView 
 			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:text="@string/app_name"
			android:textColor="@color/simple_button_color"
			android:textSize="60sp"
			android:shadowColor="#E6E6FA"
			android:shadowDx="1"
			android:shadowDy="1"
			android:shadowRadius="0.5"
		/>
			
	</RelativeLayout>
	
	
  <!-- 登录输入框布局 -->
  
  <RelativeLayout 
   	android:id="@+id/login_div"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="15dp"
    android:background="@drawable/bg_login_div"
    android:layout_alignParentBottom="true"
  >
  		<!-- 用户名 -->
  		<TextView 
	  	android:id="@+id/login_username"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:text="@string/login_label_username"
	  	android:layout_alignParentTop="true"
	    android:layout_marginTop="5dp"
	  	/>
  		<!-- 用户名输入框 -->
	  	<EditText 
		android:id="@+id/login_username_edit"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	    android:layout_below="@id/login_username"
	    android:singleLine="true"
	    android:inputType="text"
	  	/>
	  	<!-- 密码 -->
	  	<TextView   
		android:id="@+id/login_password"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/login_username_edit"
		android:layout_marginTop="3dp"            
		android:text="@string/login_label_password"
		/>
		
		<!-- 密码输入框 -->
		<EditText
		android:id="@+id/login_password_edit"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/login_password"
		android:password="true"
		android:singleLine="true"
		android:inputType="textPassword"    
		/>
		<!-- 登录按钮 -->
		<Button
		android:id="@+id/login_signin_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/login_password_edit"
		android:layout_alignRight="@id/login_password_edit"
		android:layout_marginTop="10dp"        
		android:text="@string/login_button_login"
		style="@style/blue_button"
        />
        
		<!-- 提示栏 -->
		<TextView
		android:id="@+id/login_progress_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@id/login_password_edit"
		android:layout_alignBottom="@id/login_signin_button"
		android:gravity="bottom"
		android:textSize="13dp"
		android:textColor="#888"
		android:autoLink="web"
		android:clickable="true"
		/>
		
  </RelativeLayout>
  <RelativeLayout
	 android:layout_width="fill_parent"
     android:layout_height="wrap_content"
   >
  
    <TextView  
		android:id="@+id/login_learn_more_link"
		android:text="@string/login_label_learn_more"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="25dp"
		android:textColor="#888" 
		android:layout_width="wrap_content"
	/>
	</RelativeLayout>	
</LinearLayout>
