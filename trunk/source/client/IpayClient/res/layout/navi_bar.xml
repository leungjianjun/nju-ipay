<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部导航栏 from fanfou header-->
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="47dp"
  android:background="@drawable/bg_navi_bar"
  android:gravity="center_vertical"
  android:layout_alignParentTop="true">
  
  <!-- 标题 iPay  此处先用文字代替 -->
  
  <TextView 
  	android:id="@+id/navi_bar_title"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:layout_marginTop="6dp"
	android:layout_marginLeft="3dp"
	android:layout_marginBottom="6dp"
	android:text="@string/app_name"
	android:textColor="@color/simple_button_color"
	android:textSize="24sp"
  />
  	<!-- 条形码扫描 -->
  	<ImageButton
	    android:id="@+id/navi_bar_scanner_btn" 
	  	android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_alignParentRight="true"
	    android:paddingRight="10dip"
	    android:paddingLeft="10dip"
	  	android:background="@null"
	    android:src="@drawable/navi_bar_barcode_selector"
  	/>
  
   	
  <!--  	<ImageButton 
		android:id="@+id/navi_bar_scanner_btn"
        android:background="@null"
        android:src="@drawable/navi_bar_cart_selector"
        android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_toLeftOf="@id/navi_bar_search_btn"
		android:paddingRight="10dip"
		android:paddingLeft="10dip"
   	/> -->
   	        
        
	<!-- 长条进度条，导航栏底部 -->
	<ProgressBar 
		android:id="@+id/navi_bar_progress_bar"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_alignParentBottom="true"
		style="@style/gProgressBar.Horizontal"
     />
   
   
   
  
  

    
</RelativeLayout>
