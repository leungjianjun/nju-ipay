<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="47dp"
  	android:background="@drawable/bg_navi_bar"
  	android:gravity="center_vertical">
  	
  	<!-- 返回按钮 -->
  	<Button 
  		android:id="@+id/navi_bar_back"
  		android:layout_width="wrap_content"
  		android:layout_height="fill_parent"
  		android:layout_alignParentLeft="true"
  		style="@style/navi_bar_button"
  		android:text="返回"
  	/>
  	
  		<!-- 搜索按钮 -->
  	<ImageButton
    	android:id="@+id/navi_bar_search" 
  		android:layout_width="wrap_content"
    	android:layout_height="fill_parent"
    	android:layout_alignParentRight="true"
    	android:paddingRight="10dip"
    	android:paddingLeft="10dip"
  		android:background="@null"
    	android:src="@drawable/navi_bar_search_selector"
  	/>
  	
	<!-- 搜索框 -->
	<EditText android:id="@+id/navi_bar_search_edit"
		android:hint="搜索商品"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@id/navi_bar_search"
		android:layout_toRightOf="@id/navi_bar_back"
		android:layout_marginLeft="12dip"
	/>  
    
</RelativeLayout>
